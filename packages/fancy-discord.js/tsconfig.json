{
    "compilerOptions": {
        "strict": true,
        "moduleResolution": "node",
        "declaration": true,
        "removeComments": false,
        "alwaysStrict": true,
        "module": "commonjs",
        "target": "es2019",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "jsx": "react"
    },
    "include": ["src"],
    "exclude": ["lib", "node_modules", "**/*.spec.ts", "**/*.spec.tsx", "**/*.test.ts", "**/*.test.tsx"]
}
